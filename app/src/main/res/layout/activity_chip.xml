<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChipActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action"
        app:chipIcon="@drawable/person_24"
        app:closeIconVisible="true" />
    <com.google.android.material.chip.Chip
        android:id="@+id/chip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Chip.Entry"
        android:text="Entry"
        app:chipIcon="@drawable/person_24"
        app:closeIconVisible="true" />
    <com.google.android.material.chip.Chip
        android:id="@+id/chip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        android:text="Filter"
        app:chipIcon="@drawable/person_24"
        app:closeIconVisible="true" />
    <com.google.android.material.chip.Chip
        android:id="@+id/chip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:text="Choice"
        app:chipIcon="@drawable/person_24"
        app:closeIconVisible="true" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleLine="true"
        app:chipSpacingHorizontal="20dp"
        android:id="@+id/chip_group"
       >

        <com.google.android.material.chip.Chip
            android:id="@+id/filter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 1"
            app:chipIcon="@drawable/person_24" />
        <com.google.android.material.chip.Chip
            android:id="@+id/filter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 2"
            app:chipIcon="@drawable/person_24" />
        <com.google.android.material.chip.Chip
            android:id="@+id/filter3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 3"
            app:chipIcon="@drawable/person_24"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/filter4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 4"
            app:chipIcon="@drawable/person_24" />
        <com.google.android.material.chip.Chip
            android:id="@+id/filter5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 5"
            app:chipIcon="@drawable/person_24"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/filter6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 6"
            app:chipIcon="@drawable/person_24" />
        <com.google.android.material.chip.Chip
            android:id="@+id/filter7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 7"
            app:chipIcon="@drawable/person_24" />
        <com.google.android.material.chip.Chip
            android:id="@+id/filter8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 8"
            app:chipIcon="@drawable/person_24" />
        <com.google.android.material.chip.Chip
            android:id="@+id/filter9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Filter 9"
            app:chipIcon="@drawable/person_24" />
    </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <MultiAutoCompleteTextView
        android:hint="Enter emails"
        android:id="@+id/multitext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>